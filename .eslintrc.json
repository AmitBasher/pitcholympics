{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "react"],
    "rules": {
        "semi": ["error", "always"],
        "no-unused-vars": "error",
        "no-console": "warn",
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
    }
}
